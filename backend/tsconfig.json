{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts"
, "src/db/schema.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}